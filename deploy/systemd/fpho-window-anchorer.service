[Unit]
Description=FPHO Window Report Anchorer
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
WorkingDirectory=/root/Flux-Oracle
EnvironmentFile=-/etc/fpho/fpho.env
ExecStart=/usr/bin/node /root/Flux-Oracle/deploy/vps/fpho-window-anchorer.mjs
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

