# Shared environment for FPHO systemd services.
#
# Copy to /etc/fpho/fpho.env and adjust as needed.

FPHO_DB_PATH=/root/Flux-Oracle/data/fpho.sqlite
FPHO_PAIR=FLUXUSD
FPHO_ENABLED_VENUES=binance,kraken,gate,kucoin,mexc,crypto_com,coinex,htx

# API
FPHO_API_PORT=3100

# Ingestor health endpoint
FPHO_INGESTOR_HEALTH_HOST=0.0.0.0
FPHO_INGESTOR_HEALTH_PORT=9200

# Grace seconds for minute/window finalization (defaults to methodology.graceSeconds)
FPHO_GRACE_SECONDS=15

# Window report cadence (defaults to 600)
# Windowed anchors cadence (default 5 minutes)
FPHO_WINDOW_SECONDS=300

# Reporter quorum signing (dev-mode defaults exist; override for real keys)
FPHO_REPORTER_THRESHOLD=2
FPHO_REPORTER_1_PRIVATE_KEY=
FPHO_REPORTER_2_PRIVATE_KEY=
FPHO_REPORTER_3_PRIVATE_KEY=

# Flux daemon RPC (for on-chain anchors)
FPHO_FLUX_RPC_ENDPOINT=http://127.0.0.1:16124
FPHO_FLUX_RPC_USERNAME=
FPHO_FLUX_RPC_PASSWORD=

# Raw tick retention (0 disables pruning)
FPHO_RAW_TICK_RETENTION_SECONDS=86400
FPHO_RAW_TICK_PRUNE_INTERVAL_SECONDS=3600
